using Gtk 4.0;
using He 1;

template $ColorwayMainWindow : He.ApplicationWindow {
  resizable: false;
  title: "Colorway";

  Overlay about_overlay {
    child: Box main_box {
      orientation: vertical;
      Box {
        Box {
          orientation: vertical;
          spacing: 0;
          styles [ "sidebar-view" ]

          He.AppBar headerbar1 {
            show-back: false;
            show-right-title-buttons: false;
          }

          WindowHandle {
            Box color_box {
              orientation: vertical;
              spacing: 12;
              margin-start: 18;
              margin-end: 18;
              margin-bottom: 18;
            }
          }
        }
        Box {
          orientation: vertical;
          spacing: 0;

          He.AppBar headerbar {
            show-back: false;
            show-left-title-buttons: false;

            [titlebar-menu]
            MenuButton menu_button {
              icon-name: "open-menu-symbolic";
              menu-model: menu;
              valign: center;
            }

            [viewtitle-widget]
            He.TextField color_label {
              tooltip-text: _("Change color (hexcode)");
              visibility: true;
              is-outline: true;
              margin-start: 14;
              styles [ "numeric" ]
            }
          }

          WindowHandle {
            vexpand: true;

            He.OverlayButton color_picker_button {
              icon: "color-select-symbolic";
              primary-tooltip: _("Pick Color");
              styles [ "clr-preview" ]

              Box {
                Box props_box {
                  orientation: vertical;
                  spacing: 6;
                  margin-top: 18;
                  margin-start: 18;
                  margin-end: 18;
                }
              }
            }
          }
        }
      }
    };
  }
}

menu menu {
  section {
    item {
      label: _("Copy Colors to Clipboard");
      action: "win.action_export_txt";
    }

    item {
      label: _("Copy Colors Image to Clipboard");
      action: "win.action_export_png";
    }
  }

  section {
    item {
      label: _("About Colorway");
      action: "win.action_about";
    }
  }
}
